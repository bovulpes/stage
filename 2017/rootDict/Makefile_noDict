include $(ROOTSYS)/etc/Makefile.arch

EVENTO        = Event.$(ObjSuf)
EVENTSO       = libEvent.$(DllSuf)
EVENT         = Event$(ExeSuf)

.SUFFIXES: .$(SrcSuf) .$(ObjSuf) .$(DllSuf)

all:            $(EVENTSO)

$(EVENTSO):     $(EVENTO)
	$(LD) $(SOFLAGS) $(LDFLAGS) $^ $(OutPutOpt) $@ $(EXPLLINKLIBS)

$(EVENT):       $(EVENTSO)
	$(LD) $(LDFLAGS) $(EVENTO) $(LIBS) $(OutPutOpt)$@
	$(MT_EXE)
	@echo "$@ done"

Event.$(ObjSuf): Event.h

.$(SrcSuf).$(ObjSuf):
	$(CXX)  $(CXXFLAGS) -c $<

clean:
	@rm -f $(EVENTO) $(EVENTSO)
